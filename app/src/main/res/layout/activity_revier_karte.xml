<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RevierKarte"
        android:background="@drawable/background">

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/revier"
            tools:context=".RevierKarte"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton android:id="@+id/jgdein_Add_Btn"
                 android:layout_width="39dp"
                 android:layout_height="38dp"
                 android:clickable="true"
                 android:focusable="true"
                 android:src="@android:drawable/ic_input_add"
                 android:background="#2196F3" android:onClick="onClickAddJgdEin"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="16dp"
                 android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/revier"
                 android:contentDescription="@string/add_Jagdeinrichtung"/>

    <ImageButton android:id="@+id/jgdein_Del_Btn"
                 android:layout_width="39dp"
                 android:layout_height="38dp"
                 android:clickable="true"
                 android:focusable="true"
                 android:background="#F85A4F"
                 android:src="@android:drawable/ic_delete"
                 android:layout_marginTop="35dp"
                 app:layout_constraintTop_toBottomOf="@+id/jgdein_Add_Btn" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="16dp" android:onClick="onClickDelJgdEin"
                 android:contentDescription="@string/del_Jagdeinrichtung"/>
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/jgdeinNameInput"
              android:hint="@string/add_Jagdeinrichtung"
              android:autofillHints=""
              android:inputType="text"
              app:layout_constraintStart_toEndOf="@+id/jgdein_Add_Btn"
              android:layout_marginStart="12dp"
              android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/revier"
              android:freezesText="false" android:textSize="14sp" android:textColor="#FFFFFF"
              android:textColorHint="#FFFFFF"/>

    <ImageButton android:layout_width="32dp"
                 android:layout_height="34dp"
                 android:id="@+id/refresh"
                 android:clickable="true"
                 android:focusable="true"
                 android:src="@android:drawable/stat_notify_sync"
                 android:onClick="onClickRefresh"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/revier"
                 android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                 android:contentDescription="@string/refresh_Btn" android:visibility="visible"
                 android:contextClickable="true"
    />
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/jgdeinNameInputOut"
              android:hint="@string/del_Jagdeinrichtung"
              android:autofillHints=""
              android:inputType="text" android:layout_marginStart="12dp"
              app:layout_constraintStart_toEndOf="@+id/jgdein_Del_Btn" android:layout_marginTop="32dp"
              app:layout_constraintTop_toBottomOf="@+id/jgdeinNameInput" android:textSize="14sp"
              android:textColor="#FFFFFF" android:textColorHint="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>