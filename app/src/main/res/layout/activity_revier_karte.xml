<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RevierKarte">

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/revier"
            tools:context=".RevierKarte"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button android:id="@+id/jgdeinAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/add_Jagdeinrichtung_Btn"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/revier" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:background="#2196F3"/>

    <Button android:id="@+id/jgdeinDelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/del_Jagdeinrichtung_Btn"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/revier"
            app:layout_constraintStart_toEndOf="@+id/jgdeinAddBtn" android:layout_marginStart="20dp"
            android:background="#F44336"/>

    <Button android:id="@+id/jgdeinDmgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/dmg_Jagdeinrichtung_Btn"
            android:background="#ECD50F"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/jgdeinAddBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>