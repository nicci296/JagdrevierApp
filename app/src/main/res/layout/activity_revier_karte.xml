<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RevierKarte"
        android:background="@drawable/background">

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/revier"
            tools:context=".RevierKarte"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:padding="10dp" android:layout_alignParentBottom="true"
                    android:layout_below="@+id/revier">

        <Spinner
            android:id="@+id/revier_spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="77dp"
            android:backgroundTint="#FFFFFF"
            android:spinnerMode="dropdown" />

        <ImageButton
            android:id="@+id/add_Revier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="175dp"
            android:layout_marginTop="54dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/baseline_edit_location_white_48"
            android:tint="#2196F3" />

        <ImageButton
            android:id="@+id/refresh_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="276dp"
            android:layout_marginTop="72dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/refresh_Btn"
            android:contextClickable="true"
            android:focusable="true"
            android:src="@drawable/outline_refresh_white_36"
            android:tint="#A2E654" />

    </RelativeLayout>

</RelativeLayout>